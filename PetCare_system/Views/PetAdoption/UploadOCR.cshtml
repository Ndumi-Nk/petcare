@using (Html.BeginForm("UploadOCR", "PetAdoption", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <h2>Upload Adoption Form Image</h2>
    <input type="file" name="ocrFile" class="form-control mb-2" accept="image/*" required />
    <input type="submit" value="Scan & Submit" class="btn btn-primary" />
}
@if (TempData["OCRResult"] != null)
{
    <div class="alert alert-info mt-3">@TempData["OCRResult"]</div>
}
