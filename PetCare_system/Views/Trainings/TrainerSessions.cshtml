@model IEnumerable<PetCare_system.Models.TrainingSession>

@{
    ViewBag.Title = "My Training Sessions";
}

<div class="container">
    <h2 class="mb-4">My Training Sessions</h2>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Today's Schedule</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="thead-light">
                        <tr>
                            <th>Date</th>
                            <th>Pet Name</th>
                            <th>Training Type</th>
                            <th>Time</th>
                            <th>Status</th>
                            
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var session in Model)
                        {
                            <tr>
                                <td>@session.SessionDate.ToString("ddd, MMM d")</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-paw mr-2 text-primary"></i>
                                        @session.Pet.Name
                                    </div>
                                </td>
                                <td>
                                    <span class="badge
                                        @(session.TrainingType == "Obedience" ? "badge-info" :
                                          session.TrainingType == "Agility" ? "badge-success" :
                                          "badge-warning")">
                                        @session.TrainingType
                                    </span>
                                </td>
                                <td>
                                    @{
                                        // Safely parse the time strings
                                        DateTime startTime, endTime;
                                        if (DateTime.TryParse(session.StartTime.ToString(), out startTime) &&
                                            DateTime.TryParse(session.EndTime.ToString(), out endTime))
                                        {
                                            <span class="text-nowrap">
                                                <i class="far fa-clock text-muted mr-1"></i>
                                                @startTime.ToString("h:mm tt") - @endTime.ToString("h:mm tt")
                                            </span>
                                        }
                                        else
                                        {
                                            <span>@session.StartTime - @session.EndTime</span>
                                        }
                                    }
                                </td>
                                <td>
                                    <span class="badge
                                        @(session.Status == "Scheduled" ? "badge-secondary" :
                                          session.Status == "In Progress" ? "badge-primary" :
                                          session.Status == "Completed" ? "badge-success" :
                                          "badge-danger")">
                                        @session.Status
                                    </span>
                                </td>
                                <td>
                                    @if (session.CheckInTime == null)
                                    {
                                        <a href="@Url.Action("CheckIn", new { id = session.Id })"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-sign-in-alt"></i> Check In
                                        </a>
                                    }
                                    else if (session.CheckOutTime == null)
                                    {
                                        <a href="@Url.Action("CheckOut", new { id = session.Id })"
                                           class="btn btn-sm btn-outline-success">
                                            <i class="fas fa-sign-out-alt"></i> Check Out
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">
                                            <i class="fas fa-check-circle text-success"></i> Completed
                                        </span>
                                    }
                                </td>
                              
                                    

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info mt-4">
            <i class="fas fa-info-circle mr-2"></i> No training sessions scheduled for today.
        </div>
    }
</div>

@section Styles {
    <style>
        .table-hover tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.05);
        }

        .badge {
            font-size: 0.85rem;
            padding: 0.35em 0.65em;
            font-weight: 500;
        }

        .card {
            border: none;
            border-radius: 0.5rem;
            overflow: hidden;
        }

        .table {
            margin-bottom: 0;
        }

            .table th {
                border-top: none;
                font-weight: 600;
                text-transform: uppercase;
                font-size: 0.75rem;
                letter-spacing: 0.5px;
            }
    </style>
}