@model IEnumerable<PetCare_system.Models.CompletedModule>

@{
    ViewBag.Title = "Completed Modules";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-check-circle"></i> @ViewBag.Title
            <small class="text-muted">@ViewBag.PetName</small>
        </h2>
        <a href="@Url.Action("PetProgress", new { petId = ViewBag.PetId })" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Progress
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-primary">
                <tr>
                    <th>Module</th>
                    <th>Completion Date</th>
                    <th>Score</th>
                    <th>Certificate</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var completed in Model)
                {
                    <tr>
                        <td>@completed.Module.Title</td>
                        <td>@completed.CompletionDate.ToString("d")</td>
                        <td>
                            <div class="progress" style="height: 20px;">
                                <div class="progress-bar @(completed.Score >= 70 ? "bg-success" : "bg-warning")"
                                     role="progressbar" style="width: @completed.Score%"
                                     aria-valuenow="@completed.Score" aria-valuemin="0" aria-valuemax="100">
                                    @completed.Score.ToString("0.0")%
                                </div>
                            </div>
                        </td>
                        <td>
                            <a href="#" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-download"></i> Download
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>