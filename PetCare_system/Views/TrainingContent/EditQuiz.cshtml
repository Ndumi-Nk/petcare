@model PetCare_system.Models.QuizQuestion

@{
    ViewBag.Title = "Edit Quiz Question";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3><i class="bi bi-pencil-square"></i> @ViewBag.Title</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("EditQuiz", "TrainingContent", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.TrainingModuleId)

                <div class="mb-3">
                    @Html.LabelFor(model => model.QuestionText, new { @class = "form-label" })
                    @Html.TextAreaFor(model => model.QuestionText, new { @class = "form-control", rows = 3 })
                    @Html.ValidationMessageFor(model => model.QuestionText, "", new { @class = "text-danger" })
                </div>

                <h5 class="mt-4">Options</h5>
                <div id="optionsContainer">
                    @foreach (var option in Model.Options)
                    {
                        <div class="mb-3 option-row">
                            <div class="input-group">
                                <div class="input-group-text">
                                    <input class="form-check-input mt-0" type="radio" name="IsCorrect" value="@option.Id" @(option.IsCorrect ? "checked" : "")>
                                </div>
                                <input type="text" name="OptionText" class="form-control" value="@option.OptionText" required />
                                <input type="hidden" name="OptionIds" value="@option.Id" />
                                <button type="button" class="btn btn-outline-danger remove-option" @(Model.Options.Count <= 2 ? "disabled" : "")>
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    }
                </div>

                <button type="button" id="addOption" class="btn btn-sm btn-outline-secondary mb-3">
                    <i class="bi bi-plus"></i> Add Another Option
                </button>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Explanation, new { @class = "form-label" })
                    @Html.TextAreaFor(model => model.Explanation, new { @class = "form-control", rows = 2 })
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("ModuleQuizzes", new { id = Model.TrainingModuleId })" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Questions
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Add new option
            $('#addOption').click(function () {
                var optionCount = $('.option-row').length;
                var newOption = `
                    <div class="mb-3 option-row">
                        <div class="input-group">
                            <div class="input-group-text">
                                <input class="form-check-input mt-0" type="radio" name="IsCorrect" value="new${optionCount}">
                            </div>
                            <input type="text" name="OptionText" class="form-control" placeholder="Option text" required />
                            <input type="hidden" name="OptionIds" value="0" />
                            <button type="button" class="btn btn-outline-danger remove-option">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>
                `;
                $('#optionsContainer').append(newOption);
            });

            // Remove option
            $(document).on('click', '.remove-option', function () {
                if ($('.option-row').length > 2) {
                    $(this).closest('.option-row').remove();
                }
            });
        });
    </script>
}