@model PetCare_system.Models.VideoUploadViewModel

@{
    ViewBag.Title = "Upload Training Video";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .upload-container {
        max-width: 800px;
        margin: 30px auto;
        padding: 30px;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }

        .upload-container h2 {
            color: #2c3e50;
            margin-bottom: 25px;
            padding-bottom: 10px;
            border-bottom: 2px solid #f1f1f1;
        }

    .form-group {
        margin-bottom: 20px;
    }

    .control-label {
        font-weight: 600;
        color: #34495e;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 16px;
    }

    textarea.form-control {
        min-height: 100px;
    }

    .btn-submit {
        background: #3498db;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        transition: all 0.3s;
    }

        .btn-submit:hover {
            background: #2980b9;
        }

    .btn-cancel {
        background: #95a5a6;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        font-size: 16px;
        transition: all 0.3s;
    }

        .btn-cancel:hover {
            background: #7f8c8d;
            color: white;
        }

    .file-upload {
        padding: 10px;
        background: #f8f9fa;
        border: 2px dashed #ddd;
        border-radius: 4px;
        text-align: center;
    }

        .file-upload:hover {
            border-color: #3498db;
        }

    .text-muted {
        color: #7f8c8d;
        font-size: 14px;
    }

    .field-validation-error {
        color: #e74c3c;
        font-size: 14px;
    }
</style>

<div class="upload-container">
    <h2>Upload Training Video</h2>

    @using (Html.BeginForm("UploadVideo", "TrainingContent", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.TrainingModuleId, new { @class = "control-label" })
            @Html.DropDownListFor(model => model.TrainingModuleId, (SelectList)ViewBag.Modules, "Select Module", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TrainingModuleId)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class = "control-label" })
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter video title" } })
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label" })
            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", placeholder = "Enter video description", rows = 4 })
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VideoFile, new { @class = "control-label" })
            <div class="file-upload">
                @Html.TextBoxFor(model => model.VideoFile, new { type = "file", @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(model => model.VideoFile)
            <small class="text-muted">Supported formats: MP4, WebM (Max 100MB)</small>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DurationMinutes, new { @class = "control-label" })
            @Html.EditorFor(model => model.DurationMinutes, new { htmlAttributes = new { @class = "form-control", placeholder = "Duration in minutes" } })
            @Html.ValidationMessageFor(model => model.DurationMinutes)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DifficultyLevel, new { @class = "control-label" })
            @Html.EditorFor(model => model.DifficultyLevel, new { htmlAttributes = new { @class = "form-control", min = 1, max = 5 } })
            @Html.ValidationMessageFor(model => model.DifficultyLevel)
        </div>

        <div class="form-group" style="margin-top: 30px;">
            <button type="submit" class="btn-submit">
                <i class="glyphicon glyphicon-upload"></i> Upload Video
            </button>
            <a href="@Url.Action("ManageVideos")" class="btn-cancel">
                <i class="glyphicon glyphicon-remove"></i> Cancel
            </a>
        </div>
    }
</div>