@model IEnumerable<PetCare_system.Models.TrainingVideo>

@{
    ViewBag.Title = "Manage Training Videos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .video-manager {
        max-width: 1200px;
        margin: 30px auto;
        padding: 20px;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }

        .video-manager h2 {
            color: #2c3e50;
            margin-bottom: 25px;
            padding-bottom: 10px;
            border-bottom: 2px solid #f1f1f1;
        }

    .btn-upload {
        background: #3498db;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
        margin-bottom: 20px;
        transition: all 0.3s;
    }

        .btn-upload:hover {
            background: #2980b9;
            transform: translateY(-2px);
        }

    .video-table {
        width: 100%;
        border-collapse: collapse;
    }

        .video-table th {
            background: #3498db;
            color: white;
            padding: 12px;
            text-align: left;
        }

        .video-table td {
            padding: 12px;
            border-bottom: 1px solid #f1f1f1;
        }

        .video-table tr:hover {
            background: #f8f9fa;
        }

    .action-btns {
        display: flex;
        gap: 5px;
    }

    .btn-edit, .btn-delete {
        padding: 5px 10px;
        border-radius: 4px;
        text-decoration: none;
        font-size: 14px;
    }

    .btn-edit {
        background: #2ecc71;
        color: white;
    }

        .btn-edit:hover {
            background: #27ae60;
        }

    .btn-delete {
        background: #e74c3c;
        color: white;
        border: none;
        cursor: pointer;
    }

        .btn-delete:hover {
            background: #c0392b;
        }

    .stars {
        color: #f1c40f;
    }

    .alert {
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 4px;
    }

    .alert-success {
        background: #d4edda;
        color: #155724;
    }

    .alert-danger {
        background: #f8d7da;
        color: #721c24;
    }
</style>

<div class="video-manager">
    <h2>Manage Training Videos</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <a href="@Url.Action("UploadVideo")" class="btn-upload">
        <i class="glyphicon glyphicon-plus"></i> Upload New Video
    </a>

    <table class="video-table">
        <thead>
            <tr>
                <th>Module</th>
                <th>Title</th>
                <th>Duration</th>
                <th>Difficulty</th>
                <th>Upload Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var video in Model)
            {
                <tr>
                    <td>@(video.TrainingModule?.Title ?? "N/A")</td>
                    <td>@video.Title</td>
                    <td>@video.DurationMinutes min</td>
                    <td class="stars">
                        @for (int i = 0; i < video.DifficultyLevel; i++)
                        {
                            <span class="glyphicon glyphicon-star"></span>
                        }
                    </td>
                    <td>@video.UploadDate.ToString("MMM dd, yyyy")</td>
                    <td>
                        <div class="action-btns">
                            <a href="@Url.Action("EditVideo", new { id = video.Id })" class="btn-edit">
                                <i class="glyphicon glyphicon-edit"></i> Edit
                            </a>
                            @using (Html.BeginForm("DeleteVideo", "TrainingContent", new { id = video.Id }, FormMethod.Post, new { style = "display:inline" }))
                            {
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this video?')">
                                    <i class="glyphicon glyphicon-trash"></i> Delete
                                </button>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>