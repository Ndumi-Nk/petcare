@model IEnumerable<PetCare_system.Models.GroomingStaff>
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Groomers with Assigned Sessions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1"><i class="fas fa-cut me-2 text-primary"></i>@ViewBag.Title</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Groomers</li>
                </ol>
            </nav>
        </div>

        <div class="d-flex align-items-center">
            <div class="dropdown me-3">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user-circle me-2"></i>
                    <span class="fw-medium">@User.Identity.GetUserName()</span>
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                    <li><a class="dropdown-item" href="@Url.Action("Manage", "Account")"><i class="fas fa-user me-2"></i>Profile</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { id = "logoutForm" }))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="dropdown-item text-danger">
                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                            </button>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-list me-2 text-secondary"></i>Groomer Assignments</h5>
                <div class="d-flex gap-2">
                    <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="collapse" data-bs-target="#sessionFilters">
                        <i class="fas fa-filter me-2"></i>Filter
                    </button>
                    
                </div>
            </div>
            <div id="sessionFilters" class="collapse mt-3">
                <div class="row g-3">
                    <div class="col-md-4">
                        <input type="text" class="form-control form-control-sm" placeholder="Search groomers...">
                    </div>
                    <div class="col-md-4">
                        <select class="form-select form-select-sm">
                            <option>All Service Types</option>
                            <option>Basic Grooming</option>
                            <option>Full Package</option>
                            <option>Deluxe Spa</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <input type="date" class="form-control form-control-sm">
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Groomer</th>
                            <th>Contact</th>
                            <th style="width: 40%">Assigned Sessions</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var groomer in Model)
                        {
                            <tr>
                                <td class="ps-4 align-middle">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar avatar-sm me-3 bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0">@groomer.Groom_Name @groomer.Groom_Surname</h6>
                                            <small class="text-muted">ID: @groomer.GroomStaffId</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="align-middle">
                                    <a href="mailto:@groomer.Groom_Email" class="text-reset text-decoration-none">
                                        <i class="fas fa-envelope me-2 text-muted"></i>@groomer.Groom_Email
                                    </a>
                                </td>
                                <td>
                                    @if (groomer.SparGroomings != null && groomer.SparGroomings.Any())
                                    {
                                        <div class="accordion" id="sessions-@groomer.GroomStaffId">
                                            @foreach (var session in groomer.SparGroomings)
                                            {
                                                <div class="accordion-item border-0 mb-2">
                                                    <div class="accordion-header">
                                                        <div class="card shadow-sm">
                                                            <div class="card-body p-3">
                                                                <div class="d-flex justify-content-between align-items-center">
                                                                    <div class="d-flex align-items-center flex-wrap gap-2">
                                                                        <span class="badge bg-primary bg-opacity-10 text-primary">
                                                                            <i class="fas fa-paw me-1"></i> @session.PetName
                                                                        </span>
                                                                        <small class="text-muted">
                                                                            <i class="far fa-calendar me-1"></i> @session.PreferredDate.ToString("MMM dd, yyyy")
                                                                        </small>
                                                                        <span class="badge @GetServiceTypeBadgeClass(session.ServiceType.ToString())">
                                                                            @session.ServiceType
                                                                        </span>
                                                                        <small class="text-muted">
                                                                            <i class="fas fa-clock me-1"></i> @session.DurationHours.ToString("0.0") hrs
                                                                        </small>
                                                                    </div>
                                                                    <div class="d-flex gap-2">
                                                                        @Html.ActionLink("Report", "Report", "GroomingStaffs",
                                                                            new { bookingId = session.BookingId },
                                                                            new { @class = "btn btn-sm btn-primary" })
                                                                        <button class="btn btn-sm btn-outline-secondary"
                                                                                data-bs-toggle="collapse"
                                                                                data-bs-target="#session-@session.BookingId">
                                                                            <i class="fas fa-chevron-down"></i>
                                                                        </button>
                                                                    </div>
                                                                </div>
                                                                <div id="session-@session.BookingId" class="accordion-collapse collapse">
                                                                    <div class="mt-3 ps-4">
                                                                        @if (!string.IsNullOrEmpty(session.SpecialInstructions))
                                                                        {
                                                                            <div class="mb-2">
                                                                                <small class="text-muted d-block">
                                                                                    <i class="fas fa-info-circle me-1"></i>
                                                                                    Special Instructions:
                                                                                </small>
                                                                                <p class="mb-0">@session.SpecialInstructions</p>
                                                                            </div>
                                                                        }
                                                                        <div class="row">
                                                                            <div class="col-md-6">
                                                                                <small class="text-muted d-block">
                                                                                    <i class="fas fa-user me-1"></i>
                                                                                    Owner: @session.OwnerName
                                                                                </small>
                                                                                <small class="text-muted d-block">
                                                                                    <i class="fas fa-phone me-1"></i>
                                                                                    @session.PhoneNumber
                                                                                </small>
                                                                            </div>
                                                                            <div class="col-md-6">
                                                                                <small class="text-muted d-block">
                                                                                    <i class="fas fa-paw me-1"></i>
                                                                                    Breed: @session.Breed
                                                                                </small>
                                                                                <small class="text-muted d-block">
                                                                                    <i class="fas fa-calendar-check me-1"></i>
                                                                                    Booked: @session.BookingDate.ToString("g")
                                                                                </small>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-center py-3">
                                            <i class="fas fa-calendar-times fa-2x text-muted mb-2"></i>
                                            <p class="text-muted mb-0">No sessions assigned</p>
                                        </div>
                                    }
                                </td>
                                <td class="text-end pe-4 align-middle">
                                    <div class="d-flex gap-2 justify-content-end">
                                        <a href="@Url.Action("Edit", new { id = groomer.GroomStaffId })"
                                           class="btn btn-sm btn-outline-secondary"
                                           data-bs-toggle="tooltip"
                                           title="Edit Groomer">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Details", new { id = groomer.GroomStaffId })"
                                           class="btn btn-sm btn-outline-info"
                                           data-bs-toggle="tooltip"
                                           title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetServiceTypeBadgeClass(string serviceType)
    {
        switch (serviceType)
        {
            case "BasicGrooming":
                return "bg-info bg-opacity-10 text-info";
            case "FullGroomingPackage":
                return "bg-success bg-opacity-10 text-success";
            case "DeluxeSpaTreatment":
                return "bg-warning bg-opacity-10 text-warning";
            case "PuppyKittenFirstVisit":
                return "bg-primary bg-opacity-10 text-primary";
            case "SpecialtyCuts":
                return "bg-purple bg-opacity-10 text-purple";
            default:
                return "bg-secondary bg-opacity-10 text-secondary";
        }
    }
}
@section Scripts {
    <script>
        // Accordion toggle handler
        document.querySelectorAll('.accordion-collapse').forEach(collapse => {
            collapse.addEventListener('show.bs.collapse', e => {
                e.target.closest('.accordion-item').querySelector('.fa-chevron-down')
                    .classList.replace('fa-chevron-down', 'fa-chevron-up');
            });

            collapse.addEventListener('hide.bs.collapse', e => {
                e.target.closest('.accordion-item').querySelector('.fa-chevron-up')
                    .classList.replace('fa-chevron-up', 'fa-chevron-down');
            });
        });

        // Initialize tooltips
        $(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });

        // Logout confirmation
        document.getElementById('logoutForm')?.addEventListener('submit', function (e) {
            if (!confirm('Are you sure you want to log out?')) {
                e.preventDefault();
            }
        });
    </script>
}

<style>
    .avatar {
        width: 36px;
        height: 36px;
        display: inline-flex;
    }

    .bg-purple {
        background-color: #6f42c1;
    }

    .text-purple {
        color: #6f42c1;
    }

    .card {
        border: none;
        border-radius: 0.5rem;
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-2px);
        }

    .accordion-button:not(.collapsed) {
        background-color: transparent;
        box-shadow: none;
    }

    .table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.5px;
        border-top: none;
    }

    .badge {
        font-weight: 500;
        padding: 0.35em 0.65em;
    }

    .breadcrumb {
        background: transparent;
        padding: 0;
        font-size: 0.875rem;
    }

    .session-details {
        background-color: #f8f9fa;
        border-radius: 0.5rem;
        padding: 1rem;
        margin-top: 0.5rem;
    }
</style>