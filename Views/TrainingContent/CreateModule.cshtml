@model PetCare_system.Models.TrainingModule

@{
    ViewBag.Title = "Create New Training Module";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3><i class="bi bi-plus-circle"></i> @ViewBag.Title</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("CreateModule", "TrainingContent", FormMethod.Post, new { enctype = "multipart/form-data", id = "createForm" }))
            {
                @Html.AntiForgeryToken()

                <!-- Display validation summary at the top -->
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            @Html.LabelFor(model => model.Title, new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "Enter module title" })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.Description, new { @class = "form-label" })
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 3, placeholder = "Enter description" })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.TrainingType, new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.TrainingType, new { @class = "form-control", placeholder = "e.g., Obedience, Agility" })
                            @Html.ValidationMessageFor(model => model.TrainingType, "", new { @class = "text-danger" })
                        </div>

                       
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            @Html.LabelFor(model => model.Difficulty, new { @class = "form-label" })
                            @Html.DropDownListFor(model => model.Difficulty,
                                new SelectList(new[] { "Beginner", "Intermediate", "Advanced" }),
                                "Select Difficulty",
                                new { @class = "form-select" })
                            @Html.ValidationMessageFor(model => model.Difficulty, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.DifficultyLevel, new { @class = "form-label" })
                            @Html.DropDownListFor(model => model.DifficultyLevel,
                                new SelectList(Enumerable.Range(1, 5)),
                                new { @class = "form-select" })
                            @Html.ValidationMessageFor(model => model.DifficultyLevel, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.DurationMinutes, new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.DurationMinutes,
                                new { @class = "form-control", type = "number", min = "1", placeholder = "Duration in minutes" })
                            @Html.ValidationMessageFor(model => model.DurationMinutes, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.SuitableBreeds, new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.SuitableBreeds, new { @class = "form-control", placeholder = "e.g., Labrador, Poodle" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.MinimumAge, new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.MinimumAge,
                                new { @class = "form-control", type = "number", min = "0", value = "0" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Thumbnail Image</label>
                            <input type="file" name="imageFile" class="form-control" accept="image/*" />
                            @Html.ValidationMessage("imageFile", new { @class = "text-danger" })

                            <!-- Safe image preview -->
                            @if (Model != null && !string.IsNullOrEmpty(Model.ThumbnailUrl))
                            {
                                <div class="mt-2">
                                    <img src="@Model.ThumbnailUrl" class="img-thumbnail" alt="Current thumbnail" style="max-height: 200px;" />
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("Modules")" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary" id="submitBtn">
                        <i class="bi bi-save"></i> Create Module
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        // Prevent double form submission
        $(document).ready(function () {
            $('#createForm').on('submit', function () {
                $('#submitBtn').prop('disabled', true).html('<i class="bi bi-hourglass"></i> Saving...');
            });
        });
    </script>
}