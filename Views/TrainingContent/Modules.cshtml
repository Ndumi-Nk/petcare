@model IEnumerable<PetCare_system.Models.TrainingModule>

@{
    ViewBag.Title = "Training Modules";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-collection"></i> @ViewBag.Title</h2>
        <a href="@Url.Action("CreateModule")" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Module
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var module in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(module.ThumbnailUrl))
                    {
                        <img src="@module.ThumbnailUrl" class="card-img-top" alt="@module.Title" style="height: 180px; object-fit: cover;">
                    }
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <h5 class="card-title">@module.Title</h5>
                            <span class="badge bg-@(module.DifficultyLevel == 1 ? "success" : module.DifficultyLevel == 2 ? "warning" : "danger")">
                                @module.Difficulty
                            </span>
                        </div>
                        <p class="card-text text-muted">@module.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <i class="bi bi-clock"></i> @module.DurationMinutes min
                            </small>
                            <span class="badge bg-info">
                                @module.Videos.Count videos
                            </span>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("ModuleVideos", new { id = module.Id })" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-play-circle"></i> Videos
                            </a>
                            <a href="@Url.Action("ModuleQuizzes", new { id = module.Id })" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-question-circle"></i> Quizzes
                            </a>
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-dark dropdown-toggle" type="button" id="moduleActions" data-bs-toggle="dropdown">
                                    <i class="bi bi-gear"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("EditModule", new { id = module.Id })">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                    </li>
                                    <li>
                                        <form action="@Url.Action("DeleteModule", new { id = module.Id })" method="post" onsubmit="return confirm('Are you sure you want to delete this module?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>