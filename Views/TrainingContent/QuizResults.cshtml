@model IEnumerable<PetCare_system.Models.QuizResult>

@{
    ViewBag.Title = "Quiz Results";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-graph-up"></i> @ViewBag.Title
            <small class="text-muted">@ViewBag.ModuleTitle</small>
        </h2>
        <a href="@Url.Action("ModuleQuizzes", new { id = ViewBag.ModuleId })" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Back to Questions
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <canvas id="resultsChart" height="100"></canvas>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-primary">
                <tr>
                    <th>Pet</th>
                    <th>Score</th>
                    <th>Completed At</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var result in Model)
                {
                    <tr>
                        <td>@result.Pet.Name</td>
                        <td>
                            <div class="progress" style="height: 20px;">
                                <div class="progress-bar @(result.Score >= 70 ? "bg-success" : "bg-danger")"
                                     role="progressbar" style="width: @result.Score%"
                                     aria-valuenow="@result.Score" aria-valuemin="0" aria-valuemax="100">
                                    @result.Score%
                                </div>
                            </div>
                        </td>
                        <td>@result.CompletedAt.ToString("g")</td>
                        <td>
                            <a href="#" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-eye"></i> View Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        $(document).ready(function () {
            var ctx = document.getElementById('resultsChart').getContext('2d');
            var scores = @Html.Raw(Json.Encode(Model.Select(r => r.Score)));
            var dates = @Html.Raw(Json.Encode(Model.Select(r => r.CompletedAt.ToString("MMM dd"))));

            var chart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: dates,
                    datasets: [{
                        label: 'Quiz Scores',
                        data: scores,
                        backgroundColor: 'rgba(54, 162, 235, 0.2)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 2,
                        tension: 0.3,
                        fill: true
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100,
                            ticks: {
                                callback: function(value) {
                                    return value + '%';
                                }
                            }
                        }
                    },
                    plugins: {
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return 'Score: ' + context.raw + '%';
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
}