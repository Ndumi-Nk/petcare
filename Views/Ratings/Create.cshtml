@model PetCare_system.Models.Rating
@{
    ViewBag.Title = "Rate Our Service";
}

<!-- Style -->
<style>
    body {
        background-color: #f7f7f7;
        font-family: 'Poppins', sans-serif;
        color: #333;
        padding: 0 20px;
    }

    .rating-title {
        font-size: 28px;
        font-weight: 700;
        text-align: center;
        margin-bottom: 20px;
        color: #333;
        padding-top: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-size: 18px;
        font-weight: 600;
        display: block;
        margin-bottom: 8px;
        color: #555;
    }

    .star-rating {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 10px;
    }

        .star-rating input {
            display: none; /* Hide radio buttons */
        }

    .star {
        font-size: 32px;
        color: #ddd;
        cursor: pointer;
        transition: color 0.3s ease;
    }

        .star:hover,
        .star:hover ~ .star {
            color: #ffb400; /* Hover effect on stars */
        }

    .star-rating input:checked ~ .star {
        color: #ffb400; /* Color the stars based on selection */
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        border: 1px solid #ddd;
        font-size: 16px;
    }

    .btn-submit {
        background-color: #28a745;
        color: white;
        padding: 12px 24px;
        border: none;
        border-radius: 25px;
        font-size: 18px;
        cursor: pointer;
        display: block;
        margin: 0 auto;
        transition: background-color 0.3s ease;
    }

        .btn-submit:hover {
            background-color: #218838;
        }

    .text-danger {
        color: red;
    }
</style>

<!-- Rating Form -->
<h2 class="rating-title">Rate Our Service</h2>

@using (Html.BeginForm("Create", "Rating", FormMethod.Post, new { id = "ratingForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Rating:</label>
        <div class="star-rating">
            @for (int i = 1; i <= 5; i++)
            {
                <input type="radio" name="Score" value="@i" id="rating_@i" />
                <label for="rating_@i" class="star">&#9733;</label> <!-- Star symbol -->
            }
        </div>
        @Html.ValidationMessageFor(m => m.Score, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Comment">Comment:</label>
        @Html.TextAreaFor(m => m.Comment, new { @class = "form-control", rows = 4 })
    </div>

    <button type="submit" class="btn-submit">Submit</button>
}

<!-- JavaScript to show a popup after submission -->
<script>
    document.getElementById("ratingForm").addEventListener("submit", function(event) {
        event.preventDefault(); // Prevent default form submission

        // Display popup message
        alert("Thank you for your response!");

        // Now, you can manually submit the form after showing the alert
        this.submit(); // Submit the form after the alert is closed
    });
</script>
