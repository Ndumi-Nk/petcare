@{
    ViewBag.Title = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DrPaws - Premium Pet Care Services</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">


    <style>
        :root {
            --primary-color: #4b6cb7;
            --secondary-color: #182848;
            --accent-color: #ff6b6b;
            --light-color: #f8f9fa;
            --dark-color: #343a40;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
            line-height: 1.6;
        }

        /* Hero Section */
        .hero-section {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 5rem 0;
            text-align: center;
            position: relative;
            overflow: hidden;
            border-radius: 0 0 20px 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

            .hero-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: url('https://images.unsplash.com/photo-1534361960057-19889db9621e?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80') no-repeat center center/cover;
                opacity: 0.15;
                z-index: 0;
            }

        .hero-content {
            position: relative;
            z-index: 1;
            max-width: 800px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .hero-section h1 {
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .hero-section .lead {
            font-size: 1.5rem;
            margin-bottom: 2rem;
            font-weight: 300;
        }

        /* Buttons */
        .btn {
            display: inline-block;
            padding: 12px 30px;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-size: 0.9rem;
            border: none;
            cursor: pointer;
        }

        .btn-primary {
            background-color: var(--accent-color);
            color: white;
            box-shadow: 0 4px 15px rgba(255,107,107,0.4);
        }

            .btn-primary:hover {
                background-color: #ff5252;
                transform: translateY(-3px);
                box-shadow: 0 7px 20px rgba(255,107,107,0.6);
            }

        .btn-outline {
            background-color: transparent;
            color: white;
            border: 2px solid white;
            margin-left: 15px;
        }

            .btn-outline:hover {
                background-color: white;
                color: var(--primary-color);
            }

        /* Service Cards */
        .service-card {
            background-color: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            transition: all 0.4s ease;
            height: 100%;
            position: relative;
            overflow: hidden;
            border: 1px solid rgba(0,0,0,0.05);
        }

            .service-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
            }

            .service-card i {
                font-size: 3rem;
                color: var(--primary-color);
                margin-bottom: 1.5rem;
                display: block;
            }

            .service-card h2 {
                font-size: 1.5rem;
                margin-bottom: 1rem;
                color: var(--secondary-color);
            }

            .service-card p {
                color: #666;
                margin-bottom: 2rem;
            }

            .service-card .btn {
                padding: 8px 20px;
                font-size: 0.8rem;
            }

        /* Features Section */
        .features-section {
            padding: 5rem 0;
            background-color: #f9f9f9;
        }

        .feature-box {
            text-align: center;
            padding: 30px;
        }

            .feature-box i {
                font-size: 2.5rem;
                color: var(--primary-color);
                margin-bottom: 1.5rem;
            }

            .feature-box h3 {
                font-size: 1.3rem;
                margin-bottom: 1rem;
            }

        /* Testimonials */
        .testimonial-section {
            padding: 5rem 0;
            background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
            color: white;
        }

        .testimonial-card {
            background-color: rgba(255,255,255,0.1);
            border-radius: 15px;
            padding: 30px;
            margin: 15px;
            backdrop-filter: blur(10px);
        }

        .testimonial-text {
            font-style: italic;
            margin-bottom: 1.5rem;
        }

        .testimonial-author {
            font-weight: 700;
        }

        .testimonial-role {
            font-size: 0.9rem;
            opacity: 0.8;
        }

        /* Pet Gallery */
        .pet-gallery {
            padding: 5rem 0;
        }

        .pet-item {
            position: relative;
            border-radius: 15px;
            overflow: hidden;
            margin-bottom: 30px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }

            .pet-item:hover {
                transform: scale(1.03);
            }

            .pet-item img {
                width: 100%;
                height: 250px;
                object-fit: cover;
            }

        .pet-info {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: rgba(0,0,0,0.7);
            color: white;
            padding: 15px;
        }

        /* Newsletter */
        .newsletter-section {
            padding: 5rem 0;
            background-color: var(--light-color);
        }

        .newsletter-form {
            max-width: 600px;
            margin: 0 auto;
        }

        .form-control {
            height: 50px;
            border-radius: 50px;
            padding: 0 20px;
            border: 1px solid #ddd;
        }

        /* Responsive Adjustments */
        @@media (max-width: 768px) {
            .hero-section h1 {
                font-size: 2.5rem;
            }

            .hero-section .lead {
                font-size: 1.2rem;
            }

            .btn-outline {
                margin-left: 0;
                margin-top: 15px;
                display: block;
            }
        }

        /* Animation */
        @@keyframes float {
            0% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-15px);
            }

            100% {
                transform: translateY(0px);
            }
        }

        .floating {
            animation: float 3s ease-in-out infinite;
        }

        /* Alert Styling */
        .alert {
            border-radius: 10px;
            padding: 15px 25px;
            margin-bottom: 20px;
        }

        .footer-section {
            background: linear-gradient(135deg, #ff9a9e, #fad0c4);
            color: #fff;
            padding: 60px 0 0;
            margin-top: 50px;
            position: relative;
        }

        .footer-heading {
            color: #fff;
            font-size: 1.3rem;
            margin-bottom: 25px;
            position: relative;
            padding-bottom: 10px;
        }

            .footer-heading::after {
                content: '';
                position: absolute;
                left: 0;
                bottom: 0;
                width: 50px;
                height: 2px;
                background: #ff5722;
            }

        .footer-text {
            color: rgba(255, 255, 255, 0.8);
            margin-bottom: 20px;
            line-height: 1.6;
        }

        .social-icons {
            display: flex;
            gap: 15px;
        }

        .social-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 36px;
            height: 36px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            color: #fff;
            transition: all 0.3s ease;
        }

            .social-icon:hover {
                background: #ff5722;
                transform: translateY(-3px);
            }

        .footer-links {
            list-style: none;
            padding: 0;
        }

            .footer-links li {
                margin-bottom: 10px;
            }

            .footer-links a {
                color: rgba(255, 255, 255, 0.8);
                text-decoration: none;
                transition: all 0.3s ease;
                display: inline-block;
            }

                .footer-links a:hover {
                    color: #fff;
                    transform: translateX(5px);
                }

        .footer-contact-info {
            list-style: none;
            padding: 0;
        }

            .footer-contact-info li {
                margin-bottom: 15px;
                display: flex;
                align-items: flex-start;
            }

            .footer-contact-info i {
                margin-top: 3px;
            }

            .footer-contact-info span {
                margin-left: 10px;
                color: rgba(255, 255, 255, 0.8);
            }

        .copyright-section {
            background: rgba(0, 0, 0, 0.1);
            padding: 20px 0;
            margin-top: 40px;
        }
    </style>
    <style>
        /* Enhanced CSS with animations and modern layout */
        :root {
            --primary-color: #4b6cb7;
            --secondary-color: #182848;
            --accent-color: #ff6b6b;
            --light-color: #f8f9fa;
            --dark-color: #343a40;
        }

        .hero-section {
            height: 100vh;
            background: linear-gradient(rgba(75, 108, 183, 0.8), rgba(24, 40, 72, 0.9)), url('https://images.unsplash.com/photo-1588943211346-0908a1fb0b01?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80');
            background-size: cover;
            background-position: center;
            display: flex;
            align-items: center;
            color: white;
        }

        .service-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            padding: 4rem 0;
        }

        .service-card {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
        }

            .service-card:hover {
                transform: translateY(-10px);
            }

        .pet-gallery {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            padding: 4rem 0;
        }

        .pet-card {
            position: relative;
            border-radius: 15px;
            overflow: hidden;
        }

            .pet-card img {
                width: 100%;
                height: 300px;
                object-fit: cover;
                transition: transform 0.3s ease;
            }

            .pet-card:hover img {
                transform: scale(1.1);
            }

        .stats-section {
            background: var(--primary-color);
            color: white;
            padding: 4rem 0;
            text-align: center;
        }

        .stat-item {
            padding: 2rem;
        }

        .stat-number {
            font-size: 3rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .team-section {
            padding: 4rem 0;
            background: var(--light-color);
        }

        .team-member {
            text-align: center;
            padding: 2rem;
        }

            .team-member img {
                width: 200px;
                height: 200px;
                border-radius: 50%;
                object-fit: cover;
                margin-bottom: 1rem;
                border: 5px solid var(--accent-color);
            }

        .emergency-banner {
            background: var(--accent-color);
            color: white;
            padding: 2rem;
            text-align: center;
            margin: 4rem 0;
            border-radius: 15px;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .hero-content h1 {
                font-size: 2.5rem;
            }

            .service-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <!-- Display Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            @if (!User.Identity.IsAuthenticated)
            {
                <!-- Hero Section -->
                <section class="hero-section">
                    <div class="container text-center">
                        <h1 class="animate__animated animate__fadeInDown">Premium Care for Your Furry Family</h1>
                        <p class="lead mb-4">24/7 Veterinary Services • Luxury Boarding • Professional Grooming</p>
                        <div class="row justify-content-center stats-row">
                            <div class="col-md-8">
                                <div class="row">
                                    <div class="col stat-item">
                                        <div class="stat-number">15K+</div>
                                        <div>Happy Pets</div>
                                    </div>
                                    <div class="col stat-item">
                                        <div class="stat-number">200+</div>
                                        <div>Expert Staff</div>
                                    </div>
                                    <div class="col stat-item">
                                        <div class="stat-number">24/7</div>
                                        <div>Emergency Care</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <a href="#services" class="btn btn-primary btn-lg mt-4">Explore Services</a>
                    </div>
                </section>
            }
            else
            {
                <h1>Welcome back to DrPaws!</h1>
                <p class="lead">We're happy to see you and your pet again. How can we help today?</p>
                <div class="mt-4">
                    <a href="#services" class="btn btn-primary">Book a Service</a>
                    <a href="/Vet_Consultations/Detail" class="btn btn-outline">View Appointments</a>
                </div>
            }
        </div>
    </section>

    <!-- Main Content -->
    <div class="container">
        <!-- Features Section -->
        <section class="features-section">
            <div class="row text-center mb-5">
                <div class="col-12">
                    <h2 class="display-4 mb-3">Why Choose DrPaws?</h2>
                    <p class="lead">We provide exceptional care with a personal touch</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="feature-box">
                        <i class="fas fa-shield-alt"></i>
                        <h3>Certified Experts</h3>
                        <p>All our veterinarians and groomers are certified professionals with years of experience.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-box">
                        <i class="fas fa-heart"></i>
                        <h3>Compassionate Care</h3>
                        <p>We treat every pet as if they were our own, with love and attention to detail.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-box">
                        <i class="fas fa-clock"></i>
                        <h3>24/7 Emergency</h3>
                        <p>Round-the-clock emergency services when your pet needs urgent care.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Services Section -->
        <section id="services" class="py-5">
            <div class="row text-center mb-5">
                <div class="col-12">
                    <h2 class="display-4 mb-3">Our Services</h2>
                    <p class="lead">Comprehensive care for all your pet's needs</p>
                </div>
            </div>

            <div class="row">
                <!-- Veterinary Care -->
                <div class="col-md-4 mb-4">
                    <div class="service-card">
                        <div class="service-header">
                            <i class="fas fa-stethoscope"></i>
                            <div class="service-meta">
                                <span class="service-duration">30-60 mins</span>
                                <span class="service-price">From R350</span>
                            </div>
                        </div>
                        <h3>Veterinary Care</h3>
                        <p class="service-description">Comprehensive medical services including check-ups, vaccinations, and surgery.</p>
                        <div class="service-actions">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a href="@Url.Action("Create", "Vet_Consultations")" class="service-link">
                                    <span>Schedule Consultation</span>
                                    <i class="fas fa-arrow-right"></i>
                                </a>
                            }
                            else
                            {
                                <div class="service-login-prompt">
                                    <i class="fas fa-lock"></i>
                                    <a href="/Account/Login" class="service-link">Login to Access</a>
                                </div>
                            }
                        </div>
                        <div class="service-details">
                            <div class="detail-item">
                                <i class="fas fa-clock"></i>
                                <span>Same-day appointments available</span>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-user-md"></i>
                                <span>Certified veterinarians</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Pet Boarding -->
                <div class="col-md-4 mb-4">
                    <div class="service-card">
                        <div class="service-header">
                            <i class="fas fa-home"></i>
                            <div class="service-meta">
                                <span class="service-capacity">3 spots left</span>
                                <span class="service-rating">4.9 ★</span>
                            </div>
                        </div>
                        <h3>Pet Boarding</h3>
                        <p class="service-description">Safe boarding with daily exercise and 24/7 supervision.</p>
                        <div class="service-actions">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a href="@Url.Action("Pet_Boarding", "Pet_Boarding")" class="service-link">
                                    <span>Reserve Stay</span>
                                    <i class="fas fa-calendar-check"></i>
                                </a>
                            }
                            else
                            {
                                <div class="service-login-prompt">
                                    <i class="fas fa-lock"></i>
                                    <a href="/Account/Login" class="service-link">Login to Book</a>
                                </div>
                            }
                        </div>
                        <div class="service-details">
                            <div class="detail-item">
                                <i class="fas fa-wifi"></i>
                                <span>Live webcam access</span>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-map-marker-alt"></i>
                                <span>3 locations available</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Day Care Check-In/Out -->
                @{
                    var showPickup = TempData["ShowPickup"] as bool? ?? false;
                }
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-info mt-2">
                        @TempData["Message"]
                    </div>
                }

                <div class="col-md-4 mb-4">
                    <div class="service-card timeline-card">
                        <div class="service-header">
                            <i class="fas fa-clock"></i>
                            <div class="service-progress">
                                <div class="progress-step active">Check-In</div>
                                <div class="progress-step">Ongoing</div>
                                <div class="progress-step">Check-Out</div>
                            </div>
                        </div>
                        <h3>Day Care Session</h3>
                        <p class="service-description">Current status of your pet's daycare session</p>
                        <div class="service-actions">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="timeline-actions">
                                    <a href="@Url.Action("CheckIn", "DayCare")" class="status-button active">
                                        <i class="fas fa-sign-in-alt"></i>
                                        <span>Check-In</span>
                                    </a>
                                    <a href="@Url.Action("Index", "DayCare")" class="status-button">
                                        <i class="fas fa-sign-out-alt"></i>
                                        <span>Check-Out</span>
                                    </a>

                                    <!-- Pickup Button -->
                                    <button type="button" class="status-button" onclick="togglePickupForm()">
                                        <i class="fas fa-map-marker-alt"></i>
                                        <span>Pickup</span>
                                    </button>

                                    <!-- Hidden Pickup Form -->
                                    <form method="post" action="@Url.Action("RequestPickup", "Home")" id="pickupForm" style="display:none; margin-top:10px;">
                                        <select name="petId" class="form-control mb-2" required>
                                            <option value="">-- Select Pet --</option>
                                            @if (ViewBag.Pets != null)
                                            {
                                                foreach (var pet in (IEnumerable<PetCare_system.Models.Pet>)ViewBag.Pets)
                                                {
                                                    <option value="@pet.Id">@pet.Name</option>
                                                }
                                            }
                                        </select>

                                        <input type="text" name="pickupAddress" class="form-control mb-2" placeholder="Enter your pickup address" required />
                                        <button type="submit" class="btn btn-danger btn-sm">Confirm Pickup</button>
                                    </form>

                                    <script>
                                        function togglePickupForm() {
                                            var form = document.getElementById("pickupForm");
                                            form.style.display = form.style.display === "none" ? "block" : "none";
                                        }
                                    </script>
                                </div>
                            }
                            else
                            {
                                <div class="service-login-prompt">
                                    <i class="fas fa-lock"></i>
                                    <a href="/Account/Login" class="service-link">Login to Manage</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>


                <!-- VIP Membership -->
                <div class="col-md-4 mb-4">
                    <div class="service-card">
                        <div class="service-header">
                            <i class="fas fa-id-card service-icon"></i>
                            <div class="service-meta">
                                <span class="service-status">Gold Tier Available</span>
                                <span class="service-price">R999/month</span>
                            </div>
                        </div>
                        <h3>VIP Membership</h3>
                        <p>Exclusive benefits including discounts, priority booking, and monthly care packages.</p>
                        <div class="service-actions">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a href="@Url.Action("Register", "Membership")" class="service-link">
                                    <span>Upgrade Account</span>
                                    <i class="fas fa-star"></i>
                                </a>
                            }
                            else
                            {
                                <div class="service-link">
                                    <a href="/Account/Login" class="service-link">Login to Join</a>
                                    <i class="fas fa-lock"></i>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Grooming & Spa -->
                <div class="col-md-4 mb-4">
                    <div class="service-card">
                        <div class="service-header">
                            <i class="fas fa-spa service-icon"></i>
                            <div class="service-meta">
                                <span class="service-status">Next Available: Today</span>
                                <span class="service-price">From R450</span>
                            </div>
                        </div>
                        <h3>Luxury Spa & Grooming</h3>
                        <p>Full-service grooming with organic products and relaxing spa treatments.</p>
                        <div class="service-actions">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a href="@Url.Action("Create", "SparGrooming")" class="service-link">
                                    <span>Book Treatment</span>
                                    <i class="fas fa-calendar-alt"></i>
                                </a>
                            }
                            else
                            {
                                <div class="service-link">
                                    <a href="/Account/Login" class="service-link">Login to Book</a>
                                    <i class="fas fa-lock"></i>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Pet Adoption -->
                <div class="col-md-4 mb-4">
                    <div class="service-card adoption-card">
                        <div class="service-header">
                            <i class="fas fa-paw service-icon"></i>
                            <div class="service-meta">
                                <span class="service-status">12 Pets Available</span>
                                <span class="service-price">Adoption Fee Waived</span>
                            </div>
                        </div>
                        <h3>Adoption Program</h3>
                        <p>Meet our rescue pets looking for forever homes.</p>
                        <div class="service-actions">
