                            this.addWhatsAppButton();
                        } else {
                            this.addMessage("Alright! Let me know if there's anything else I can help with 😊", 'bot');
                        }
                        this.awaitingAgentConfirmation = false;
                        return;
                    }

                    const response = this.generateResponse(question);
                    if (response === "fallback") {
                        this.addMessage("I'm sorry, I couldn't find an answer to that.", 'bot');
                        this.addMessage("Would you like to talk to a live agent on WhatsApp? (Yes/No)", 'bot');
                        this.awaitingAgentConfirmation = true;
                    } else {
                        this.addMessage(response, 'bot');
                    }
                }, 1000);
            },

            generateResponse(question) {
                const faq = {
                    'greeting': ['Hello! How can I help you today?', 'Hi there! 😊 What can I do for you?', 'Welcome to DrPaws! How can I assist?'],
                    'thanks': ['You\'re welcome!', 'Happy to help!', 'Anytime! 😊'],
                    'hours': 'Our clinic is open Monday-Saturday from 8AM to 8PM.',
                    'emergency': 'For emergencies, please call our 24/7 hotline: 1-800-PET-CARE',
                    'appointment': 'You can book appointments online or call us during business hours.',
                    'price': 'Prices vary by service. Could you specify which service you\'re asking about?',
                    'services': 'We offer veterinary care, grooming, boarding, training, and adoption services!',
                    'location': 'We have 3 locations in the city. Our main clinic is at 123 Pet Street.',
                    'website': 'You\'re already on our website! 😊 Explore our services using the menu above.'
                };

                const lowerQuestion = question.toLowerCase();

                if (lowerQuestion.match(/hi|hello|hey|good morning|good afternoon/i)) {
                    return this.randomResponse(faq.greeting);
                }

                if (lowerQuestion.match(/thank|thanks|appreciate/i)) {
                    return this.randomResponse(faq.thanks);
                }

                const directMatches = {
                    'website': /website|site|online/i,
                    'services': /services|offer|provide/i,
                    'location': /where|location|address/i,
                    'hours': /hour|time|open|close/i,
                    'emergency': /emergency|urgent/i,
                    'appointment': /appointment|booking|schedule/i,
                    'price': /price|cost|how much|fee/i
                };

                for (const [key, regex] of Object.entries(directMatches)) {
                    if (regex.test(lowerQuestion)) {
                        return faq[key];
                    }
                }

                return "fallback";
            },

            randomResponse(responses) {
                return responses[Math.floor(Math.random() * responses.length)];
            },

            addMessage(text, sender) {
                const messageDiv = document.createElement('div');
                messageDiv.className = `message ${sender}-message`;
                messageDiv.textContent = text;
                this.chatMessages.appendChild(messageDiv);
                this.chatMessages.scrollTop = this.chatMessages.scrollHeight;
            },

            showTypingIndicator() {
                const typing = document.createElement('div');
                typing.className = 'typing-indicator';
                typing.innerHTML = `
                        <div class="typing-dot"></div>
                        <div class="typing-dot"></div>
                        <div class="typing-dot"></div>
                    `;
                this.chatMessages.appendChild(typing);
                this.chatMessages.scrollTop = this.chatMessages.scrollHeight;
            },

            removeTypingIndicator() {
                const typing = this.chatMessages.querySelector('.typing-indicator');
                if (typing) typing.remove();
            },

            addWhatsAppButton() {
                const connectDiv = document.createElement('div');
                connectDiv.className = 'message bot-message';
                connectDiv.innerHTML = `
                        <p>Click below to open WhatsApp and chat with our support team:</p>
                        <a href="https://wa.me/0720382598" target="_blank" class="btn btn-primary">Chat on WhatsApp</a>
                    `;
                this.chatMessages.appendChild(connectDiv);
                this.chatMessages.scrollTop = this.chatMessages.scrollHeight;
            },

            loadState() {
                if (localStorage.getItem('chatClosed') === 'true') {
                    this.closeChat();
                }
            }
        };

        document.addEventListener('DOMContentLoaded', () => chatbot.init());
    </script>

