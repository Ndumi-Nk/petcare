@model List<PetCare_system.Models.Product>

<h2 class="text-center mb-5">Your Cart</h2>

<div class="cart-container">
    @if (Model == null || !Model.Any())
    {
        <div class="empty-cart">
            <h4>Your cart is empty</h4>
            <p>Start adding your favorite products to get started!</p>
        </div>
    }
    else
    {
        <div class="cart-items">
            @foreach (var product in Model)
            {
                <div class="cart-item">
                    <div class="product-info">
                        <img src="@Url.Content(string.IsNullOrEmpty(product.ImageUrl) ? "~/images/default-product-image.jpg" : product.ImageUrl)" alt="@product.Name" class="product-image" />
                        <div class="product-details">
                            <h5>@product.Name</h5>
                            <p>@product.Price.ToString("C", new System.Globalization.CultureInfo("en-ZA"))</p>
                        </div>
                    </div>
                    <form action="@Url.Action("RemoveFromCart", "Cart")" method="post" class="remove-form">
                        <input type="hidden" name="productId" value="@product.ProductId" />
                        <button type="submit" class="btn btn-danger btn-remove">
                            <i class="fa fa-trash"></i> Remove
                        </button>
                    </form>
                </div>
            }
        </div>

        <div class="checkout-button">
            <a href="@Url.Action("Index", "PaymentProds2")" class="btn btn-success btn-lg">
                Proceed to Checkout <i class="fa fa-arrow-right"></i>
            </a>
        </div>
    }
</div>

<style>
    .cart-container {
        margin: 20px auto;
        max-width: 900px;
        background-color: #f7f7f7;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
    }

    .empty-cart {
        text-align: center;
        padding: 50px;
        color: #555;
    }

    .cart-items {
        margin-bottom: 30px;
    }

    .cart-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 10px;
        margin-bottom: 15px;
        background-color: #fff;
        transition: box-shadow 0.3s ease;
    }

        .cart-item:hover {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

    .product-info {
        display: flex;
        align-items: center;
    }

    .product-image {
        width: 70px;
        height: 70px;
        margin-right: 20px;
        border-radius: 10px;
        object-fit: cover;
    }

    .product-details h5 {
        margin: 0;
        font-size: 18px;
        color: #333;
    }

    .product-details p {
        margin: 5px 0 0;
        color: #28a745;
        font-weight: bold;
    }

    .remove-form {
        margin-left: auto;
    }

    .btn-remove {
        padding: 8px 12px;
        font-size: 14px;
        display: flex;
        align-items: center;
        gap: 5px;
    }

        .btn-remove i {
            color: #fff;
        }

        .btn-remove:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .checkout-button {
        text-align: center;
        margin-top: 40px;
    }

    .btn-lg {
        padding: 12px 30px;
        font-size: 18px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .btn-lg i {
            font-size: 18px;
        }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .cart-item {
            flex-direction: column;
            align-items: flex-start;
        }

        .product-info {
            margin-bottom: 15px;
        }

        .checkout-button {
            margin-top: 20px;
        }
    }
</style>

<!-- Optional: Include FontAwesome icons for better visual feedback -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
